#ifndef _simpl_tool_configuration_H_
#define _simpl_tool_configuration_H_


#include <QtCore/QString>

namespace D3DTools
{

  QString GetSIMPLProjDir()
  {
    return QString::fromLatin1("@SIMPLProj_SOURCE_DIR_NORM@");
  }

  QString GetSIMPLSourceDir()
  {
    return QString::fromLatin1("@SIMPLProj_SOURCE_DIR_NORM@/Source");
  }

  QString GetSIMPLibDir()
  {
    return QString::fromLatin1("@SIMPLib_SOURCE_DIR_NORM@");
  }

  QString GetSIMPLibPluginDir()
  {
    return QString::fromLatin1("@SIMPLib_PLUGIN_DIR_NORM@");
  }

  QString GetSIMPLProjParentDir()
  {
    return QString::fromLatin1("@SIMPLProj_PARENT_DIR_NORM@");
  }

  QString GetSIMPLBinaryDir()
  {
    return QString::fromLatin1("@SIMPLProj_BINARY_DIR@");
  }

  QString GetDREAM3DBinaryDir()
  {
    return QString::fromLatin1("@DREAM3DProj_BINARY_DIR@");
  }


}

#endif
